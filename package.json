{
  "scope": "@hyperion",
  "name": "@hyperion/hyperion",
  "description": "Hyperion library to extend objects with 'aspects' automatically",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "_start": "tsdx watch",
    "_build": "tsdx build",
    "install-packages": "npm install --workspaces",
    "build": "tsc & npm run build --workspaces & rollup -c",
    "test": "npm test --workspaces",
    "_lint": "tsdx lint",
    "_prepare": "tsdx build",
    "_size": "size-limit",
    "_analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Mehrdad Reshadi",
  "module": "dist/.esm.js",
  "size-limit": [
    {
      "path": "dist/.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/.esm.js",
      "limit": "10 KB"
    }
  ],
  "workspaces": [
    "./packages/devtools",
    "./packages/global",
    "./packages/hook",
    "./packages/hyperion-core",
    "./packages/hyperion-dom",
    "./packages/hyperion-flowlet",
    "./packages/hyperion-util"
  ],
  "dependencies": {
    "@hyperion/global": "*",
    "@hyperion/hook": "*",
    "@hyperion/hyperion-core": "*",
    "@hyperion/hyperion-dom": "*",
    "@hyperion/hyperion-flowlet": "*",
    "@hyperion/hyperion-util": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "md5": "^2.3.0",
    "rollup": "^2.69.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "tslib": "^2.3.0",
    "typescript": "^4.6.2"
  }
}
